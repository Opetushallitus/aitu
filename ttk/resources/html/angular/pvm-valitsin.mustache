<fieldset class="datepicker-field">
  <!--{{=[[ ]]=}}-->
  <label ng-if="otsikko" ng-class="{pakollinen : pakollinen}">{{otsikko}}</label>
  <input
    type="text"
    datepicker-popup="dd.MM.yyyy"
    formatteddate="valittuDate"
    ng-model="valittuDate"
    ng-required="pakollinen"
    is-open="opened"
    min-date="minDate"
    max-date="maxDate"
    show-button-bar="false"
    pvm-validointi/>
  <button
    ng-click="open($event)"
    class="open-datepicker icon calendar-icon"></button>
  <button ng-click="valittuPvm = undefined" ng-show="tyhjennettava && valittuPvm" class="icon delete-icon" style="position: absolute; top: 0; right: 1em"></button>
</fieldset>

