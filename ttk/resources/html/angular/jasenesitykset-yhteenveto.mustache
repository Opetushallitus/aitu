{{=[[ ]]=}}
[[#i18n.yleiset]]
[[#i18n.jasenesitykset]]

<h1>
  [[jasenesitykset]]: [[yhteenveto]]
  <ohje tunniste="jasenesitykset-yhteenveto"></ohje>
</h1>

<auth-toiminto auth-blokki sallitut-roolit="['YLLAPITAJA']">
  <label>
    <input type="checkbox" ng-model="search.vain_jasenesityksia_sisaltavat">
    [[vain_jasenesityksia_sisaltavat]]
  </label>
</auth-toiminto>

<fieldset>
  <label>[[toimikausi]]</label>
  <select ng-model="search.toimikausi" ng-options="toimikausi.toimikausi_id as toimikausi.alkupvm+'-'+toimikausi.loppupvm for toimikausi in toimikaudet"></select>
</fieldset>

<div style="margin-bottom: 2em">
  <fieldset class="search-input">
    <label>[[toimikunnan-nimi]]</label>
    <input type="text" ng-model="filter" placeholder="[[hae_toimikuntia]]">
  </fieldset>
</div>

<div style="text-align: right;">
  [[lyhenteet]]
</div>
<table ng-show="toimikunnat" jarjestettava-taulukko="toimikunnat" jarjestetty-data="toimikunnatJarjestetty">
  <thead style="font-weight: bold">
    <tr>
      <th></th>
      <th colspan="6" style="text-align: center">[[esitetty]]</th>
      <th colspan="6" style="text-align: center">[[nimitetty]]</th>
    </tr>
    <tr>
      <th>[[yhteensa]]</th>
      <th ng-repeat="sarakekentta in sarakekentat" ng-bind="summat[sarakekentta]"></th>
    </tr>
    <tr>
      <th jarjestettava-sarake="nimi" jarjestely-fn="orderByLokalisoitu" oletus-jarjestely>[[tutkintotoimikunta]]</th>
      <th jarjestettava-sarake="esitetty_yhteensa">[[lyhenne_kaikki]]</th>
      <th jarjestettava-sarake="esitetty_miehia">[[lyhenne_mies]]</th>
      <th jarjestettava-sarake="esitetty_naisia">[[lyhenne_nainen]]</th>
      <th jarjestettava-sarake="esitetty_fi">FI</th>
      <th jarjestettava-sarake="esitetty_sv">SV</th>
      <th jarjestettava-sarake="nimitetty_yhteensa">[[lyhenne_kaikki]]</th>
      <th jarjestettava-sarake="nimitetty_miehia">[[lyhenne_mies]]</th>
      <th jarjestettava-sarake="nimitetty_naisia">[[lyhenne_nainen]]</th>
      <th jarjestettava-sarake="nimitetty_fi">FI</th>
      <th jarjestettava-sarake="nimitetty_sv">SV</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="toimikunta in toimikunnatJarjestetty | filter:filter">
      <td style="text-align: left"><a ng-href="#/toimikunta/{{ toimikunta.diaarinumero }}/tiedot">{{ toimikunta | lokalisoiKentta:'nimi' }}</a></td>
      <td>{{ toimikunta.esitetty_yhteensa }}</td>
      <td>{{ toimikunta.esitetty_miehia }}</td>
      <td>{{ toimikunta.esitetty_naisia }}</td>
      <td>{{ toimikunta.esitetty_fi }}</td>
      <td>{{ toimikunta.esitetty_sv }}</td>
      <td style="border-left: 1px solid black">{{ toimikunta.nimitetty_yhteensa }}</td>
      <td>{{ toimikunta.nimitetty_miehia }}</td>
      <td>{{ toimikunta.nimitetty_naisia }}</td>
      <td>{{ toimikunta.nimitetty_fi }}</td>
      <td>{{ toimikunta.nimitetty_sv }}</td>
    </tr>
  </tbody>
  <tfoot>
  <tr>
    <th>[[yhteensa]]</th>
    <th ng-repeat="sarakekentta in sarakekentat" ng-bind="summat[sarakekentta]"></th>
  </tr>
  </tfoot>
</table>

[[/i18n.jasenesitykset]]
[[/i18n.yleiset]]
