{{=[[ ]]=}}
[[#i18n.yleiset]]
[[#i18n.jasenesitykset]]

<h1>[[jasenesitykset]]: [[yhteenveto]]</h1>

<fieldset>
  <label>
    <input type="checkbox" ng-model="search.vain_jasenesityksia_sisaltavat">
    [[vain_jasenesityksia_sisaltavat]]
  </label>
</fieldset>

<fieldset>
  <label>[[toimikausi]]</label>
  <select ng-model="search.toimikausi" ng-options="toimikausi.toimikausi_id as toimikausi.alkupvm+'-'+toimikausi.loppupvm for toimikausi in toimikaudet"></select>
</fieldset>

<div style="margin-bottom: 2em">
  <input type="text" ng-model="filter" placeholder="[[hae_toimikuntia]]">
</div>

<div class="table" ng-show="toimikunnat">
  <div class="table-header">
    <div class="table-cell">[[tutkintotoimikunta]]</div>
    <div class="table-cell">[[esitetty]]: [[miehet]]</div>
    <div class="table-cell">[[esitetty]]: [[naiset]]</div>
    <div class="table-cell">[[esitetty]]: [[kaikki]]</div>
    <div class="table-cell">[[nimitetty]]: [[miehet]]</div>
    <div class="table-cell">[[nimitetty]]: [[naiset]]</div>
    <div class="table-cell">[[nimitetty]]: [[kaikki]]</div>
    <div class="table-cell">[[kaikki]]: [[miehet]]</div>
    <div class="table-cell">[[kaikki]]: [[naiset]]</div>
    <div class="table-cell">[[kaikki]]</div>
  </div>
  <div class="table-row" ng-repeat="toimikunta in toimikunnat |filter:filter">
    <div class="table-cell"><a ng-href="#/toimikunta/{{ toimikunta.diaarinumero }}/tiedot">{{ toimikunta | lokalisoiKentta:'nimi' }}</a></div>
    <div class="table-cell">{{ toimikunta.esitetty_miehia }} </div>
    <div class="table-cell">{{ toimikunta.esitetty_naisia }} </div>
    <div class="table-cell">{{ toimikunta.esitetty_yhteensa }} </div>
    <div class="table-cell">{{ toimikunta.nimitetty_miehia }} </div>
    <div class="table-cell">{{ toimikunta.nimitetty_naisia }} </div>
    <div class="table-cell">{{ toimikunta.nimitetty_yhteensa }} </div>
    <div class="table-cell">{{ toimikunta.kaikki_miehet }}</div>
    <div class="table-cell">{{ toimikunta.kaikki_naiset }}</div>
    <div class="table-cell">{{ toimikunta.kaikki }}</div>
  </div>
</div>

[[/i18n.jasenesitykset]]
[[/i18n.yleiset]]
